from tkinter import *
from tkinter import ttk
from tkinter import messagebox

root = Tk()
root.title('Trắc nghiệm')
root.geometry('700x600')
root.resizable(False, False)

myfont = ('Helvetica',12)

lb_frame_question = LabelFrame(root,text="Câu hỏi 1",font = myfont,fg ='blue',height=50)
lb_frame_question.pack()

question_text = Text(lb_frame_question, font= myfont,height=8)
question_text.pack(padx = 5, pady=5)

lb_frame_answers = LabelFrame(root,text="Các đáp án",font = myfont,fg ='blue',height=50)
lb_frame_answers.pack(fill=BOTH,expand=True)

ckbt1 = Checkbutton(lb_frame_answers, text="",onvalue=True,offvalue=False)
ckbt1.grid(column=0,row=0,sticky=NSEW)
ckbt2 = Checkbutton(lb_frame_answers, text="",onvalue=True,offvalue=False)
ckbt2.grid(column=2,row=0,sticky=NSEW)
ckbt3 = Checkbutton(lb_frame_answers, text="",onvalue=True,offvalue=False)
ckbt3.grid(column=0,row=1,sticky=NSEW)
ckbt4 = Checkbutton(lb_frame_answers, text="",onvalue=True,offvalue=False)
ckbt4.grid(column=2,row=1,sticky=NSEW)

text_answer1 = Text(lb_frame_answers, font=myfont,width=30,height=7)
text_answer1.grid(column=1,row=0,sticky=NSEW)
text_answer2 = Text(lb_frame_answers, font=myfont,width=30,height=7)
text_answer2.grid(column=3,row=0,sticky=NSEW)
text_answer3 = Text(lb_frame_answers, font=myfont,width=30,height=7)
text_answer3.grid(column=1,row=1,sticky=NSEW)
text_answer4 = Text(lb_frame_answers, font=myfont,width=30,height=7)
text_answer4.grid(column=3,row=1,sticky=NSEW)

lb_frame_actions = LabelFrame(root,text="Các thao tác",font = myfont,fg='blue',height=50)
lb_frame_actions.pack(fill=BOTH,expand=True)

btn_previous = Button(lb_frame_actions,text='Câu hỏi trước',font = myfont)
btn_previous.grid(column=0,row=0,sticky=NSEW)

btn_next = Button(lb_frame_actions,text='Câu hỏi tiếp theo',font = myfont)
btn_next.grid(column=1,row=0,sticky=NSEW)

btn_answer = Button(lb_frame_actions,text='Trả lời',font = myfont)
btn_answer.grid(column=2,row=0,sticky=NSEW)

btn_fi= Button(lb_frame_actions,text='Kết thúc',font = myfont)
btn_fi.grid(column=3,row=0,sticky=NSEW)

lb_result = Label(lb_frame_actions,font=myfont,
text='Tổng số câu hỏi: 30, trả lời 30, không trả lời 0, trả lời đúng 20, trả lời sai 10')
lb_result.grid(column=0,row=1,columnspan=4,sticky=NSEW)

root.mainloop()